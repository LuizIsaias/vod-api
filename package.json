{
  "name": "vod-api",
  "version": "1.0.0",
  "main": "index.js",
  "scripts": {
    "dev": "ts-node-dev src/index.ts",
    "build": "tsc",
    "start": "node dist/index.js",
    "typeorm": "ts-node ./node_modules/typeorm/cli.js",
    "migration:run": "npm run typeorm -- migration:run -d src/database/AppDataSource.ts",
    "migration:generate": "npm run typeorm -- migration:generate -d src/database/AppDataSource.ts -n",
    "migration:create": "npm run typeorm -- migration:create src/database/migrations/CreateVodTables"
  },
  "dependencies": {
    "express": "^4.18.2",
    "dotenv": "^16.0.3",
    "axios": "^1.6.0",
    "typeorm": "^0.3.17",
    "reflect-metadata": "^0.1.13",
    "sqlite3": "^5.1.6",
    "ioredis": "^5.3.2",
    "class-validator": "^0.14.0"
  },
  "devDependencies": {
    "typescript": "^5.0.4",
    "ts-node": "^10.9.2",
    "ts-node-dev": "^2.0.0",
    "@types/node": "^18.11.18",
    "@types/express": "^4.17.17"
  }
}
